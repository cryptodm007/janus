{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MCP-Janus Envelope",
  "type": "object",
  "properties": {
    "type": {
      "const": "request"
    },
    "id": {
      "type": "string"
    },
    "method": {
      "type": "string"
    },
    "params": {
      "type": "object"
    },
    "chain": {
      "type": "object",
      "properties": {
        "origin": {
          "type": "string"
        },
        "destination": {
          "type": "string"
        },
        "executor": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        },
        "constitution": {
          "type": "string"
        }
      },
      "required": [
        "origin",
        "destination",
        "executor",
        "signature"
      ]
    }
  },
  "required": [
    "type",
    "id",
    "method",
    "params",
    "chain"
  ]
}
